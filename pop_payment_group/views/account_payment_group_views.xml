<?xml version="1.0"?>
<odoo>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">account.payment.group.form</field>
        <field name="model">account.payment.group</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="account_payment_group.view_account_payment_group_form"/>
        <field name="arch" type="xml">

            <!-- <button name="cancel" states="draft,posted" string="Cancel" type="object"/> -->

            <button name="cancel" position="attributes">
                <attribute name="states">draft,posted</attribute>
            </button>

            <button name="action_draft" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'in', ('draft','posted'))]}</attribute>
            </button>

            <field name="communication" position="after">
                <field name="pop_id" required="1" visible="1" options="{'no_create': True, 'no_open': True}"/>
                <field name="pop_session_id" required="1"  options="{'no_create': True, 'no_open': True}"/>
            </field>

			<field name="payment_ids" position="attributes">
                <attribute name="context">{'default_pop_id': pop_id, 'default_pop_session_id': pop_session_id, 'default_payment_group_company_id': company_id, 'default_payment_type': partner_type == 'supplier' and 'outbound' or 'inbound', 'default_payment_date': payment_date, 'default_partner_id': partner_id, 'default_partner_type': partner_type, 'payment_group': True, 'default_amount': payment_difference, 'tree_view_ref': 'account_payment_group.view_account_payment_from_group_tree'}</attribute>
            </field>

            <field name="notes" position="after">
                <field name="pop_session_journal_line_ids">
                    <tree string="Renglones de caja">
                        <field name="id" />
                        <field name="ref" />
                        <field name="pop_session_name" />
                        <field name="anulado" />
                    </tree>
                </field>
            </field>
            
        </field>
    </record>

</odoo>